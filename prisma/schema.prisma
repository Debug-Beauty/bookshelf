generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


enum ReadingStatus {
  QUERO_LER
  LENDO
  LIDO
  PAUSADO
  ABANDONADO
}

model Genre {
  id     String  @id @default(uuid())
  name   String  @unique
  books  Book[]
}

model Book {
  id          String       @id @default(uuid())
  title       String
  author      String
  genreId     String?
  genre       Genre?       @relation(fields: [genreId], references: [id], onDelete: SetNull)
  year        Int?
  pages       Int?
  rating      Float?
  synopsis    String?
  cover       String?
  status      ReadingStatus @default(QUERO_LER)
  currentPage Int           @default(0)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  isbn        String? 
  notes       String?
  
  @@index([createdAt])
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
